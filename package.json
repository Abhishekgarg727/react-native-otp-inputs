    "metro-react-native-babel-preset": "0.53.1",
    "react": "16.8.3",
    "react-native": "0.59.3",
    "react-test-renderer": "16.8.3",
    "release-it": "10.4.0",
    "rimraf": "2.6.3",
    "ts-jest": "24.0.2",
    "tslint": "5.15.0",
    "typescript": "3.4.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn typescript"
    }
  }
