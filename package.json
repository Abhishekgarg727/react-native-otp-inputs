{
  "author": "Damian Sznajder <damsznajder@gmail.com>",
  "bugs": "https://github.com/dsznajder/react-native-otp-inputs/issues",
  "contributors": [
    "Micha≈Ç Kantor <kantorm96@gmail.com>"
  ],
  "description": "One-time password inputs built in pure JS for React-Native",
  "homepage": "https://github.com/dsznajder/react-native-otp-inputs",
  "license": "MIT",
  "main": "typings/commonjs/index.js",
  "types": "typings/typescript/lib/index.d.ts",
  "name": "react-native-otp-inputs",
  "repository": "https://github.com/dsznajder/react-native-otp-inputs",
  "version": "2.0.0",
  "scripts": {
    "build": "yarn clean && yarn tsc",
    "clean": "rimraf dist",
    "prepublish": "yarn clean && yarn build",
    "test": "jest -u",
    "test:ci": "jest --runInBand --coverage --verbose",
    "test:watch": "jest --watch",
    "lint": "tslint --project ./tsconfig.json",
    "prepare": "bob build"
  },
  "keywords": [
    "otp",
    "react-native",
    "one-time-password",
    "inputs"
  ],
  "peerDependencies": {
    "react-native": ">= 0.53.0 < 1"
  },
  "dependencies": {
    "lodash.flatten": "4.4.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "bail": true,
    "preset": "react-native",
    "transformIgnorePatterns": [
      "node_modules/(?!react-native)/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@types/jest": "24.0.11",
    "@types/react": "16.8.10",
    "@types/react-native": "0.57.42",
    "jest": "24.5.0",
    "merge": "1.2.1",
    "metro-react-native-babel-preset": "0.53.1",
    "react": "16.8.3",
    "react-native": "0.59.2",
    "react-test-renderer": "16.8.3",
    "release-it": "10.4.0",
    "rimraf": "2.6.3",
    "ts-jest": "24.0.0",
    "tslint": "5.13.1",
    "typescript": "3.3.3333"
  },
  "react-native": "lib/index.tsx",
  "module": "typings/module/index.js",
  "files": [
    "lib",
    "typings"
  ],
  "@react-native-community/bob": {
    "source": "lib",
    "output": "typings",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  }
}
