{
  "author": "Damian Sznajder <damsznajder@gmail.com>",
  "bugs": "https://github.com/dsznajder/react-native-otp-inputs/issues",
  "contributors": [
    "Micha≈Ç Kantor <kantorm96@gmail.com>"
  ],
  "description": "One-time password inputs built in pure JS for React-Native",
  "homepage": "https://github.com/dsznajder/react-native-otp-inputs",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "name": "react-native-otp-inputs",
  "repository": "https://github.com/dsznajder/react-native-otp-inputs",
  "version": "1.1.0",
  "scripts": {
    "build": "yarn clean && yarn tsc",
    "clean": "rimraf dist",
    "prepublish": "yarn clean && yarn build",
    "test": "jest -u",
    "test:ci": "jest --runInBand --coverage --verbose",
    "test:watch": "jest --watch",
    "lint": "tslint --project ./tsconfig.json"
  },
  "keywords": [
    "otp",
    "react-native",
    "one-time-password",
    "inputs"
  ],
  "peerDependencies": {
    "react-native": ">= 0.53.0 < 1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "bail": true,
    "preset": "react-native",
    "transformIgnorePatterns": [
      "node_modules/(?!react-native)/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@types/jest": "24.0.11",
    "@types/react": "16.8.7",
    "@types/react-native": "0.57.38",
    "jest": "24.3.1",
    "metro-react-native-babel-preset": "0.53.0",
    "react": "16.6.3",
    "react-native": "0.58.6",
    "react-test-renderer": "16.6.3",
    "rimraf": "2.6.3",
    "ts-jest": "24.0.0",
    "tslint": "5.13.1",
    "typescript": "3.3.3333"
  }
}
